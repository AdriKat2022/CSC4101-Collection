{% extends 'base.html.twig' %}

{% block title %}Edit cardbook{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1>Editing <strong>{{ hearthstone_cardbook.name }}</strong></h1>
</div>

<div class="container mt-5">
    {{ include('hearthstone_cardbook/_form.html.twig', {'button_label': 'Update'}) }}
    <br>
    {{ include('hearthstone_cardbook/_delete_form.html.twig') }}
    
</div>
    
    
<div class="container mt-5">
    <div class="card bg-warning text-dark">
        <div class="card-body">Warning: deletion cannot be undone !</div>
    </div>

    <br>

    <a href="{{ path('hearthstoneCardbook_show', {'id': hearthstone_cardbook.id}) }}"><button class="btn btn-warning">Cancel</button></a>
</div>

{% endblock %}
