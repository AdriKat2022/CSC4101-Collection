{% extends 'base.html.twig' %}

{% block title %}Deck index{% endblock %}

{% block body %}

    <div class="container">

    <h1>Deck index</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Public</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deck in decks %}
            <tr>
                <td>{{ deck.id }}</td>
                <td>{{ deck.description }}</td>
                <td>{{ deck.public ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_deck_show', {'id': deck.id}) }}">show</a>
                    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>

    <a href="{{ path('app_deck_new') }}"><button class="btn btn-success">Create a new deck</button></a>
{% endblock %}
