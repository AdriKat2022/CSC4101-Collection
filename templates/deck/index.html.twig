{% extends 'base.html.twig' %}

{% block title %}Deck index{% endblock %}

{% block body %}

<div class="container mt-5">
    
    
    <h1>Browse the decks !</h1>
    

    {# <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Public</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deck in decks %}
            <tr>
                <td>{{ deck.id }}</td>
                <td>{{ deck.description }}</td>
                <td>{{ deck.public ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_deck_show', {'id': deck.id}) }}">show</a>
                    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> #}

    <br>

    {% if not decks is empty %}

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for deck in decks %}
        <div class="col-sm-3">
            <div class="card h-100" style="max-width: 540px;">
                <div class="card-body">
                    <h4 class="card-title">{{ deck.description }}</h4>
                    <p class="card-text">{{ deck.description }}</p>
                    <a href="{{ path('app_deck_show', {'id' : deck.id}) }}" class="btn btn-primary">Open deck</a>
                </div>
                <div class="card-footer">
                    <p class="card-text">by <strong>{{ deck.member }}</strong></p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>


    {% else %}
    <div class="mt-4 p-4 bg-warning text-dark rounded">
        <h1>There is no deck yet to view !</h1>
        <p>Quick ! Be the first to create one by logging in and publishing your very first deck !</p> 
    </div>
    {% endif %}

</div>

<div class="container mt-5 text-center">
    <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-trigger="hover focus" data-bs-delay="1000" trigger title="You must be logged in to create a deck !">     
    <a href="{# {{ path('app_deck_new') }} #}" class="btn btn-success disabled">Create a new deck</a>
    </span>
</div>


{% endblock %}
