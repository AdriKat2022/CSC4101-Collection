{% extends 'base.html.twig' %}

{% block title %}Edit Deck{% endblock %}

{% block body %}

<div class="container mt-5">
        <h1>Editing <strong>{{ deck.description }}</strong></h1>
</div>

<div class="container mt-5">
    {{ include('deck/_form.html.twig', {'button_label': 'Update'}) }}
    <br>
    {{ include('deck/_delete_form.html.twig') }}
    <p>Warning: card selection is currently not possible</p>
</div>
    
<div class="container mt-5">
    <a href="{{ path('app_deck_show', {'id': deck.id}) }}"><button class="btn btn-warning">Cancel</button></a>
</div>

{% endblock %}
