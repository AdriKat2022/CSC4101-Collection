{% extends 'base.html.twig' %}

{% block title %}{{hthcard.Name}}{% endblock %}

{% block body %}

<div class="container mt-5">


    <h1>{{hthcard.Name}}</h1>

    <p><strong>{{hthcard.Name}}</strong> specifications and details</p>

    <table class="table">

        <tbody>
            <tr>
            <td>Card type:</td>
            <td class="table-info">{% if hthcard.Isminion %}Minion{% else %}Spell{% endif %}</td>
            </tr>

            <tr>
            <td>Description :</td>
            <td>{{ hthcard.Description }}</td>
            </tr>

            <tr>
            <td>Manacost :</td>
            <td class="table-danger">{{ hthcard.Manacost }}</td>
            </tr>

            <tr>
            <td>Origin :</td>
            <td><strong>{{ hthcard.HearthstoneCardbook }}</strong> by <strong>{{ hthcard.HearthstoneCardbook.Member }}</strong></td>
            </tr>
        </tbody>
    </table>
    
    <a href="{{ path('app_deck_show', { 'id': deck.id }) }}"><button class="btn btn-secondary">Back to Deck (<strong>{{ deck.name }}</strong>)</button></a>

</div>


{% endblock %}
