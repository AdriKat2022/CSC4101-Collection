{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block body %}
    <h1>Deck</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deck.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ deck.description }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ deck.public ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Hearthstone Cards</h2>
    <ul>
    {% for hthcard in deck.cards %}
    <li>
        <a href="{{ path('app_deck_hthcard_show', {'deck_id': deck.id, 'hthcard_id' : hthcard.id}) }}">{{ hthcard }}</a>
    </li>
    {% endfor %}
    </ul>

    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">edit</a>

    {# {{ include('deck/_delete_form.html.twig') }} #}

    <a href="{{ path('app_deck_index') }}">back to list</a>


{% endblock %}
