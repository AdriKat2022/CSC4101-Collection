    <div class="container mt-5">


        <h1>{{hthcard.Name}}</h1>

        <p><strong>{{hthcard.Name}}</strong> specifications and details</p>

        <table class="table">

            <tbody>
                <tr>
                <td>Card type:</td>
                <td class="table-primary">{% if hthcard.Isminion %}Minion{% else %}Spell{% endif %}</td>
                </tr>

                <tr>
                <td>Description :</td>
                <td>{{ hthcard.Description }}</td>
                </tr>

                <tr>
                <td>Manacost :</td>
                <td class="table-danger">{{ hthcard.Manacost }}</td>
                </tr>


                {% if hthcard.Isminion %}

                <tr>
                <td>Attack points :</td>
                <td class="table-secondary">{{ hthcard.Atk }}</td>
                </tr>

                <tr>
                <td>Health points :</td>
                <td class="table-secondary">{{ hthcard.Hp }}</td>
                </tr>

                {% endif %}

                <tr>
                <td>Origin :</td>
                <td class="table-dark"><strong>{{ hthcard.HearthstoneCardbook }}</strong> by <strong>{{ hthcard.HearthstoneCardbook.Member }}</strong></td>
                </tr>
            </tbody>
        </table>

        <p><a href="{{ path('hearthstoneCardbook_show', { 'id': hthcard.HearthstoneCardbook.id }) }}"><button class="btn btn-secondary">Back to Hearthstone Cardbook (<strong>{{ hthcard.HearthstoneCardbook.name }}</strong>)</button></a></p>
