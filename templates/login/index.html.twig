                <div class="form-floating mb-3 mt-3">
                    <input type="text" class="form-control" id="username" placeholder="Your username pal ?" name="_username" value="{{ last_username }}">
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mt-3 mb-3">
                    <input type="password" class="form-control" id="password" placeholder="What's the passcode ?" name="_password">
                    <label for="pwd">Password</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>



{% endblock %}
