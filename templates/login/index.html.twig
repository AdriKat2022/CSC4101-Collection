{% block title %}Login page{% endblock %}

{% block body %}


<div class="container mt-5 text-center">
    <div class="row">
        <div class="col"></div>

        <div class="col-6">

            <br>

            <h1>Login' to the tavern</h1>

            <br>
            
            <h3>Come on in ! Tell us, what's your name ?</h3>

            {# {% else %}

            <h3>Alright bud, just log in to proceed with your action.</h3>

            {% endif %} #}

            <br>
            
            {% if error %}
            <div class="card bg-danger text-white">
                <div class="card-body">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
            <br>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                {# <div class="form-outline mb-4">
                <label for="username">Username:</label>
